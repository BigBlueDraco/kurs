<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">


            <TextView
                android:id="@+id/txt_car_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_full_name"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:text="Full name"
                app:layout_constraintStart_toEndOf="@+id/txt_car_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_car_model"
                android:layout_width="115dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:text="Car model"
                app:layout_constraintStart_toEndOf="@+id/txt_car_id"
                app:layout_constraintTop_toBottomOf="@+id/txt_full_name" />

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="115dp"
                android:layout_height="20dp"
                android:text="Number"
                app:layout_constraintStart_toEndOf="@+id/txt_car_model"
                app:layout_constraintTop_toBottomOf="@+id/txt_full_name" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="143dp"
                android:layout_height="39dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/txt_full_name"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>